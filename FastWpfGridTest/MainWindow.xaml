<Window x:Class="FastWpfGridTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        xmlns:FastWpfGrid="clr-namespace:FastWpfGrid;assembly=FastWpfGrid" Title="FastWpfGrid Test Application" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="Grid 1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="Precise character glyphs" IsChecked="{Binding PreciseCharacterGlyphs, ElementName=grid1}" />
                        <CheckBox Content="Is transposed" IsChecked="{Binding IsTransposed, ElementName=grid1}" />
                    </StackPanel>
                    <FastWpfGrid:FastGridControl x:Name="grid1" Grid.Row="1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
